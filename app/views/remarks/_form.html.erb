
<%= simple_form_for([@post, @remark]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%# <%= f.association :user.current_user %>
    <%= f.input :user, :input_html => { :value => current_user }, label: false, disabled: true, display: false %>
    <%= f.association :post %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
