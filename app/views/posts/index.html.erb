<p style="color: green"><%= notice %></p>
<div class="index-page-content">
  <div class="index-posts-container">
    <div class="index-posts-grid">
      <% @posts.each do |post| %>
        <%= link_to post do %>
          <div class="index-post-card">
            <%= cl_image_tag post.photo.key %>
            <div class="index-post-card-text">
              <h2><%= post.title %></h2>
              <p><%= post.created_at.to_date %></p>
              <p><%= post.content %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
